function displayQuestion() {
    //displays question when next button is clicked
    for (var i = 0; i < liArray.length; i++) {
        if (liArray[i][1]) {
            document.getElementById("list").innerHTML += '<li onclick="displayAns();">' + liArray[i][0] + '</li>';
        } else if(liArray[i]) {
            document.getElementById("list").innerHTML += '<li onclick="hideOption();">' + liArray[i] + '</li>';
        }
    }

}
